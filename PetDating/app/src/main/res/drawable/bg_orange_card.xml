<!-- res/drawable/bg_orange_card.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 橙色渐变背景 -->
    <gradient
        android:startColor="#FFF3E0"
        android:endColor="#FFE0B2"
        android:angle="135" />       <!-- 对角线渐变 -->

    <!-- 圆角 -->
    <corners android:radius="16dp" />

    <!-- 边框 -->
    <stroke
        android:width="0.5dp"
        android:color="#FFB74D" />   <!-- 边框色 -->

    <!-- 阴影 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>