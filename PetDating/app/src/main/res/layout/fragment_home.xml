<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.petdating.viewmodel.HomeViewModel" />

        <variable
            name="click"
            type="com.example.petdating.ui.fragment.tab.HomeFragment.ProxyClick" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.tab.HomeFragment">

        <TextView
            android:id="@+id/home_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello home"
            android:onClick="@{()->click.hello()}"/>

    </FrameLayout>
</layout>
